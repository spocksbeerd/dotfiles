set hidden true
set history false
set wrapscroll true
set errorfmt "\033[7;31;40m"

cmd unarchive ${{
  case "$f" in
      *.zip) unzip "$f" ;;
      *.tar.gz) tar -xzvf "$f" ;;
      *.tar.bz2) tar -xjvf "$f" ;;
      *.tar) tar -xvf "$f" ;;
      *.7z) 7z x "$f" ;;
      *.rar) unrar "$f" ;;
      *) echo "Unsupported format" ;;
  esac
}}

cmd dirselected ${{
    set -f
    printf "Directory name: "
    read newd
    mkdir -- "$newd"
    mv -- $fx "$newd"
}}

# bindings
map y copy
map p paste
map x cut
map d
map dd delete

map au unarchive
map ds dirselected

map gf cd /mnt/Media/Film

# run shell script/binary
map R $"$f"

map gf cd /mnt/Media/Film
