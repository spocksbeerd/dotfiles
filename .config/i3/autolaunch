# Launch polybar
exec_always --no-startup-id polybar.sh &

# Launch picom
exec_always --no-startup-id picom -b &

# Set Night Light
exec_always --no-startup-id nightlight.sh &

# Set wallpaper
exec_always --no-startup-id nitrogen --restore &

# Launch dunst
exec_always --no-startup-id dunst.sh &

# Launch green with envy
exec --no-startup-id gwe --hide-window &

# Polkit agent
exec --no-startup-id policykit.sh &

# Lockscreen for suspend
exec --no-startup-id xss-lock --transfer-sleep-lock -- lockscreen.sh &
